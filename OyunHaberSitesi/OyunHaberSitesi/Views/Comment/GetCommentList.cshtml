@using EntityLayer.Concrete
@model List<Comment>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>Yorum ID</th>
        <th>Yorum User ID</th>
        <th>Haber</th>
        <th>Yorum</th>
        <th>Onay Durumu</th>
        <th>Yorum Tarihi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Com_id</td>
            <td>@item.Com_uid</td>
            <td>@item.Com_news</td>
            <td>@item.Com_text</td>
            <td>@item.Com_approval</td>
            <td>@item.Com_date</td>
            <td>
                <form action="@Url.Action("DeleteComment", "Comment", new { id = item.Com_id })" method="post">
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </td>
            <td>
                <a href="@Url.Action("EditComment", "Comment", new { id = item.Com_id })" class="btn btn-warning">Düzenle</a>
            </td>
        </tr>
    }
</table>