@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Oyun Yolcusu - Giriş Ekranı</title>

    <link href="~/Logincssjs/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Logincssjs/css/style.css">
</head>
<body>

    <div class="main">

        <div class="container">
            <div class="signup-content">

                <h2>Hos Geldiniz!</h2>
                <p class="desc"><span>Oyun Yolcusu</span> Giris Ekranı</p>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <br /><br />
                    <br /><br />
                    <div class="form-group" style="">
                        <input type="text" class="form-input" name="User_name" id="User_name" placeholder="kullanıcı adı" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" name="User_password" id="User_password" placeholder="şifre" />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit submit" value="Giris Yap" />
                        <a href="@Url.Action("RegisterLogin", "Login")" class="btn border-dark">Kayıt Ol</a>
                    </div>

                    <br /><br />
                    <br /><br />
                }
            </div>
        </div>

    </div>
    <script src="~/Logincssjs/vendor/jquery/jquery.min.js"></script>
    <script src="~/Logincssjs/js/main.js"></script>
    <script src="~/Logincssjs/vendor/jquery/jquery-ui.min.js"></script>
</body>
</html>