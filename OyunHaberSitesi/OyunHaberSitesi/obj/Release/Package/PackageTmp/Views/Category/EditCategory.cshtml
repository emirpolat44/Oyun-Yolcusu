@model EntityLayer.Concrete.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Kategori Düzenleme Sayfası</h2>

@using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Category_id)

    <div class="form-group">
        @Html.LabelFor(model => model.Category_name)
        @Html.TextBoxFor(model => model.Category_name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category_desc)
        @Html.TextBoxFor(model => model.Category_desc, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

}


