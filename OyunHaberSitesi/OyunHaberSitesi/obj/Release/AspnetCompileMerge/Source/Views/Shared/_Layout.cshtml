                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index", "New")">Gündem</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">Kategoriler</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "New")">FPS</a></li>
