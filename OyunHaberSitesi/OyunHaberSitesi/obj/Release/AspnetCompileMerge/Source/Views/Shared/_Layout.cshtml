                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">Platformlar</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item"><a class="nav-link" href="https://store.steampowered.com/?l=turkish">Steam</a></li>
                            <li class="nav-item"><a class="nav-link" href="https://store.epicgames.com/en-US/">Epic</a></li>
                            <li class="nav-item"><a class="nav-link" href="https://store.ubisoft.com/tr/games">Ubisoft</a></li>
                            <li class="nav-item"><a class="nav-link" href="https://www.ea.com/?setLocale=en-us">EA</a></li>
                            <li class="nav-item"><a class="nav-link" href="https://eu.shop.battle.net/en-us?">Battle.net</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex">
                    <button class="btn">
                        @if (Session["User_name"] != null)
                        {
                            <span class="navbar-text">@Session["User_name"]</span>
                        }
                    </button>
